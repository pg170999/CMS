<h1>Comments</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>owner</th>
      <th>Status</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
    <tr>
      <td>{{id}}</td>
      <td>{{user.firstName}}</td>
      <td><input data-id="{{id}}" type="checkbox" {{#if approveComment}}checked{{/if}} name="approveComment"></td>
      <td>{{generateTime date 'MMMM Do YYYY'}}</td>
      <td>
        <form action="/admin/comments/{{id}}?_method=DELETE" method="post">
           <button class="btn btn-danger">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
