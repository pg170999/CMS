<h1>Edit Posts</h1>
<form action="/admin/posts/edit/{{post.id}}?_method=PUT" method="post" enctype="multipart/form-data" >
  <div class="form-group">
    <label for="title">Title</label>
    <input type="title" name="title" class="form-control" id="title" value="{{post.title}}">
  </div>
  <div class="form-group">
    <label for="file">File Upload</label>
    <input type="file" name="file" class="form-control">
  </div>
  <div class="form-group">
    <label for="status">Category</label>
    <select class="form-control" name="category" id="status">
      {{#select post.category}}
      {{#each categories}}

         <option value="{{id}}">{{name}}</option>

      {{/each}}
      {{/select}}
    </select>
  </div>
  <div class="form-group">
    <label for="status">Status</label>
    <select class="form-control" name="status" id="status">
  {{#select post.status}}
      <option value="public">Public</option>
      <option value="private">Private</option>
      <option value="draft">Draft</option>
    {{/select}}
    </select>
  </div>


  <div class="form-check">
    <label for="allowComments" class="form-check-label">
    <input type="checkbox" class="form-check-input" {{#if post.allowComments}} checked="checked" {{/if}} id="allowComments" name="allowComments">
          Allow Comments
    </label>
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea name="body" cols="30" rows="10" class="form-control" id="body" >{{post.body}}</textarea>
  </div>
  <button type="submit" class="btn btn-primary">Update Post</button>
</form>
